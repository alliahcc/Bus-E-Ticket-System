<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TicketReceiptPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketReceipt"
    android:background="@drawable/ticket_background">

    <ImageView
        android:id="@+id/ticket_backIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ticket_back_icon"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/your_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Ticket"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textSize="25dp"
        android:textColor="#F9F6EE"
        android:fontFamily="@font/barlow_semi_condensed_medium"/>

    <!-- Ticket Shape -->
    <ImageView
        android:id="@+id/ticket_shape"
        android:layout_width="320dp"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/ticket_shape" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/sunny_logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/sunny_logo" />

        <TextView
            android:id="@+id/company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronic Transfer and Advance Processing\n(ETAP Solutions, Inc.)"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:paddingTop="5dp" />
    </LinearLayout>

    <!-- Ticket Details -->
    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <!-- Separator -->
            <TextView
                android:id="@+id/termnal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Terminal No."
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/terminal_no"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Ticket No."
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/ticket_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Date and Time"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="10dp" />
        </LinearLayout>

        <!-- SEPARATOR -->
        <TextView
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="--------------------------------------------------------------"
            android:textColor="#808080"
            android:layout_marginEnd="28dp"
            android:textAlignment="center"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Driver Name"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/conductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Conductor Name"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/conductor_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Plate number"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/plate_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <!-- SEPARATOR -->

        <TextView
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginEnd="28dp"
            android:paddingBottom="5dp"
            android:text="--------------------------------------------------------------"
            android:textColor="#808080"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/destination_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="FROM"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/destination1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/destination_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="TO"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/destination2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Kilometers"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/kilometers_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Discount"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/discount_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="TOTAL"
                android:textColor="#808080"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/total_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:layout_marginRight="28dp"
            android:text="--------------------------------------------------------------"
            android:textColor="#808080"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="THIS SERVES AS AN OFFICIAL RECEIPT"
            android:textColor="#000"
            android:layout_marginEnd="28dp"
            android:textAlignment="center"
            android:textSize="13dp" />
    </LinearLayout>


</RelativeLayout>