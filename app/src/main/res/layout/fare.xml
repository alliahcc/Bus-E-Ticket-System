<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/TicketReceiptPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ticket_background"
        tools:context=".TicketReceipt">

        <ImageView
            android:id="@+id/ticket_backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="55dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ticket_back_icon" />

        <TextView
            android:id="@+id/your_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/barlow_semi_condensed_medium"
            android:text="Your Ticket"
            android:textAlignment="center"
            android:textColor="#F9F6EE"
            android:textSize="25dp"
            android:textStyle="bold" />

        <!-- Ticket Shape -->
        <ImageView
            android:id="@+id/ticket_shape"
            android:layout_width="320dp"
            android:layout_height="450dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/ticket_shape" />

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sunny_logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/sunny_logo" />

            <TextView
                android:id="@+id/company_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:text="Trip Summary"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Ticket Details -->
        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Separator -->
                <TextView
                    android:id="@+id/termnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Terminal No."
                    android:textAlignment="center"
                    android:textColor="#808080"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/terminal_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="10dp" />
            </LinearLayout>

            <!-- SEPARATOR -->
            <TextView
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:paddingBottom="5dp"
                android:text="--------------------------------------------------------------"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Driver Name"
                    android:textColor="#808080"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/conductor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Conductor Name"
                    android:textColor="#808080"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/conductor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Plate number"
                    android:textColor="#808080"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/plate_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="13dp" />
            </LinearLayout>

            <!-- SEPARATOR -->

            <TextView
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:paddingBottom="5dp"
                android:text="--------------------------------------------------------------"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/routename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Route"
                    android:textColor="#808080"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/routeinput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalpassengername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Total Passenger"
                    android:textColor="#808080"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/totalpassengerinput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="13dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalfarename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="TOTAL FARE"
                    android:textColor="#808080"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/totalfareinput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/separator3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:paddingBottom="5dp"
                android:text="--------------------------------------------------------------"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:textAlignment="center"
                    android:text="THIS SERVES AS AN OFFICIAL RECEIPT"
                    android:textColor="#000"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>